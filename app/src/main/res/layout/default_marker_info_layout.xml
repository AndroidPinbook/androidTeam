<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/markerItemsLinearLayout">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pinItemSize"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/videoImageView"
                    android:layout_width="@dimen/pinItemSize"
                    android:layout_height="@dimen/pinItemSize"
                    android:background="@drawable/img_border"
                    android:src="@drawable/video_icon80"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pinItemSize"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/pictureImageView"
                    android:layout_width="@dimen/pinItemSize"
                    android:layout_height="@dimen/pinItemSize"
                    android:background="@drawable/img_border"
                    android:src="@drawable/gallery_icon80" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/noteImageView"
                    android:layout_width="@dimen/pinItemSize"
                    android:layout_height="@dimen/pinItemSize"
                    android:background="@drawable/img_border"
                    android:src="@drawable/text_icon80" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pinItemSize"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/pinImgSize"
                android:layout_height="@dimen/pinImgSize"
                android:id="@+id/pinApproveImgv"
                android:src="@drawable/approve_icon_80"
                android:background="@drawable/img_border"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="wrap_content">
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/pinImgSize"
                android:layout_height="@dimen/pinImgSize"
                android:id="@+id/pinDeleteImgv"
                android:src="@drawable/trash_icon_80"
                android:background="@drawable/img_border"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="25dp"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/pinFriendsImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/friends_1"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:id="@+id/pinOnlymeImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/onlyme_1"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:id="@+id/pinSpecialImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/special_1"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/pinThrowImgv"
            android:layout_width="@dimen/pinItemSize"
            android:layout_height="@dimen/pinItemSize"
            android:background="@drawable/img_border"
            android:src="@drawable/pin_throw68" />

    </LinearLayout>

</RelativeLayout>
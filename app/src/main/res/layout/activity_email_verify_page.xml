<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uur.com.pinbook.Activities.EmailVerifyPageActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/layoutEmailVerify">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pacifico"
            android:text="PinBook"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Neredeyse tamam!"
        android:textSize="30sp"
        android:layout_weight="2"
        android:gravity="bottom|center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Size gönderdiğimiz e-postadaki linki tıklayın."
        android:textSize="15sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <!--  Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="17"
                android:inputType="textEmailAddress"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/email"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:background="@drawable/shape"
                android:paddingLeft="8dp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/buttonActivated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pacifico"
            android:text="Aktifleştir"
            android:textColor="@color/cardview_light_background"
            android:background = "@drawable/roundedbutton"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textVerifyAgain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="E-postayı yeniden gönder"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/button_color"/>







</LinearLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".Activities.PinThrowActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="uur.com.pinbook.Activities.PinThrowActivity" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="25dp"
        android:gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/pinFriendsImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/friends_1"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:id="@+id/pinOnlymeImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/onlyme_1"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:id="@+id/pinSpecialImgv"
            android:layout_width="@dimen/pinImgSize"
            android:layout_height="@dimen/pinImgSize"
            android:layout_marginBottom="60dp"
            android:background="@drawable/img_border_blue"
            android:clickable="true"
            android:src="@drawable/special_1"
            android:visibility="gone"/>

        <!--LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal"
        android:layout_margin="15dp">


        <ImageView
            android:layout_width="@dimen/pinItemSize"
            android:layout_height="@dimen/pinItemSize"
            android:id="@+id/gotoNextPageImgv"
            android:src="@drawable/next_icon68"
            android:background="@drawable/img_border"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/pinThrowImgv"
            android:layout_width="@dimen/pinItemSize"
            android:layout_height="@dimen/pinItemSize"
            android:background="@drawable/img_border"
            android:src="@drawable/pin_throw68" />

    </LinearLayout>

</FrameLayout>